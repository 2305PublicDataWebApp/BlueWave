	<select id="getGoodsListByUserId" resultType="Goods">
	    SELECT *
	    FROM USER_TBL U
	    JOIN POINT_TBL P ON U.USER_ID = P.USER_ID
	    JOIN GOODS_TBL G ON P.PRODUCT_NO = G.PRODUCT_NO
	    WHERE U.USER_ID = #{userId }
	</select>
	
